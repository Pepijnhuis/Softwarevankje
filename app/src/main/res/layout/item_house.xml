<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:outlineProvider="bounds"
    android:padding="20sp"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/cardview"
        android:backgroundTint="@color/colorButton"
        app:cardCornerRadius="@dimen/corner_radius_card"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/profilePicture2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    tools:srcCompat="@mipmap/ic_launcher"
                    android:layout_weight="1"/>
                ">

            </LinearLayout>



            <TextView
                android:id="@+id/cardNameHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                tools:text="(name)"
                android:gravity="center"
                android:layout_marginBottom="20sp"/>

            <TextView
                android:id="@+id/SizeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                tools:text="Size" />

            <TextView
                android:id="@+id/cardHouseSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="(size)"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/RentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                tools:text="Rent" />

            <TextView
                android:id="@+id/cardHouseRent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="(rent)"
                android:layout_marginBottom="20sp"/>

            <TextView
                android:id="@+id/NumberOfHousematesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                tools:text="Number of housemates" />

            <TextView
                android:id="@+id/cardHOuseNumberHousemates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="(number housemates)"
                android:layout_marginBottom="20sp"/>

            <TextView
                android:id="@+id/AboutMeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                tools:text="About me" />

            <TextView
                android:id="@+id/cardAboutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="(about me)"
                android:layout_marginBottom="20sp"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:outlineProvider="bounds"
    android:padding="20sp"
    android:clipToPadding="false"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/cardview"
        app:cardCornerRadius="@dimen/corner_radius_card"
        android:elevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20sp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ffffff">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profilePicture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:elevation="5dp"/>

            <TextView
                android:id="@+id/cardNameHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                tools:text="(name)"
                android:gravity="center"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:id="@+id/AddressTitle"
                style="@style/BasicTextStyle"
                android:fontFamily="sans-serif-black"
                tools:text="Address"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/cardHouseAddress"
                style="@style/BasicTextStyle"
                tools:text="(address)" />

            <TextView
                android:id="@+id/SizeTitle"
                style="@style/BasicTextStyle"
                android:fontFamily="sans-serif-black"
                tools:text="Size"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/cardHouseSize"
                style="@style/BasicTextStyle"
                tools:text="(size)" />

            <TextView
                android:id="@+id/RentTitle"
                style="@style/BasicTextStyle"
                android:fontFamily="sans-serif-black"
                tools:text="Rent"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/cardHouseRent"
                style="@style/BasicTextStyle"
                tools:text="(rent)" />

            <TextView
                android:id="@+id/NumberOfHousematesTitle"
                style="@style/BasicTextStyle"
                android:fontFamily="sans-serif-black"
                tools:text="Number of housemates"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/cardHOuseNumberHousemates"
                style="@style/BasicTextStyle"
                tools:text="(number housemates)" />

            <TextView
                android:id="@+id/AboutMeTitle"
                style="@style/BasicTextStyle"
                android:fontFamily="sans-serif-black"
                tools:text="About me"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/cardAboutMe"
                style="@style/BasicTextStyle"
                tools:text="(about me)"
                android:layout_marginBottom="20sp"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
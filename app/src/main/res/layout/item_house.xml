<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:outlineProvider="bounds"
    android:padding="20sp"
    android:clipToPadding="false"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/cardview"
        app:cardCornerRadius="@dimen/corner_radius_card"
        android:elevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="20sp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ffffff">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profilePicture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:elevation="5dp"/>


            <TextView
                android:id="@+id/cardNameHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:textSize="25sp"
                tools:text="(name)" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10sp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/layout1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_room_size" />

                    <TextView
                        android:id="@+id/cardHouseSize"
                        style="@style/BasicTextStyle"
                        tools:text="(size)" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/layout2">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_room_costs" />

                    <TextView
                        android:id="@+id/cardHouseRent"
                        style="@style/BasicTextStyle"
                        tools:text="(rent)" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="50dp"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_house_mates" />

                    <TextView
                        android:id="@+id/cardHOuseNumberHousemates"
                        style="@style/BasicTextStyle"
                        tools:text="(mates)" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/AddressTitle"
                style="@style/BasicTextStyle"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-black"
                tools:text="Address" />

            <TextView
                android:id="@+id/cardHouseAddress"
                style="@style/BasicTextStyle"
                tools:text="(address)" />

            <TextView
                android:id="@+id/AboutMeTitle"
                style="@style/BasicTextStyle"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-black"
                tools:text="About me" />

            <TextView
                android:id="@+id/cardAboutMe"
                style="@style/BasicTextStyle"
                android:layout_marginBottom="20sp"
                tools:text="(about me)" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

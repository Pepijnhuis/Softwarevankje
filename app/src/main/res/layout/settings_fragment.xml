<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp"
        android:gravity="center_horizontal"
        android:background="@drawable/gradientsettings">


        <ImageView
            style="@style/CardImageStyle"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/Profielfotoacount"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BasicTextStyle"
            android:id="@+id/Naamgebruiker"
            android:textSize="25dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:onClick="goToChangeInformation"
            style="@style/ButtonStyle"
            android:text="Change informatioin"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/logoutuser"
            style="@style/ButtonStyle"
            android:text="log out" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_mainactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp">

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/progressStudentAccount"
            style="@style/ProgressBarStyle"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"
            app:spb_currentStateDescriptionColor="@color/colorPrimary"
            app:spb_currentStateNumber="four"
            app:spb_maxStateNumber="four"
            app:spb_stateBackgroundColor="@color/colorEditText"
            app:spb_stateDescriptionColor="@color/colorEditText"
            app:spb_stateForegroundColor="@color/color3"
            app:spb_stateNumberForegroundColor="@color/common_google_signin_btn_text_dark_default"
            app:spb_stateTextSize="@dimen/text_size_progress" />

        <TextView
            style="@style/BasicTextStyle"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/looking_for" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/MaleYes"
                android:layout_width="wrap_content"
                android:onClick="CheckboxMale"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorButton"
                android:text="Male" />

            <CheckBox
                android:id="@+id/FemaleYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:buttonTint="@color/colorButton"
                android:text="Female" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/BscYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorButton"
                android:text="Bsc" />

            <CheckBox
                android:id="@+id/MscYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:buttonTint="@color/colorButton"
                android:text="Msc" />

        </RelativeLayout>

        <TextView
            style="@style/BasicTextStyle"
            android:text="@string/age" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/MinAge"
                android:layout_width="70sp"
                style="@style/EditTextStyle"
                android:hint="@string/min"
                android:inputType="number" />

            <EditText
                android:id="@+id/MaxAge"
                android:layout_width="70sp"
                style="@style/EditTextStyle"
                android:hint="@string/max"
                android:layout_alignParentRight="true"
                android:inputType="number" />

        </RelativeLayout>

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/ButtonNextCA5House"
            style="@style/ButtonStyle"
            android:text="@string/next"
            android:layout_weight="1"
            android:onClick="goToMainNavigation"
            android:layout_marginLeft="200dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>